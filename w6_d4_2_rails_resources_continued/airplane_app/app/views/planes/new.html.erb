<!-- form to create new plane -->
<form action="/planes" method="post">
  <%= token_tag form_authenticity_token %>
  <div class="form-group">
    <input type="text" name="plane[name]" placeholder="Name" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <input type="text" name="plane[design]" placeholder="Design" class="form-control">
  </div>
  <div class="form-group">
    <textarea name="plane[description]" placeholder="Description" class="form-control"></textarea>
  </div>
  <input type="submit" value="Save Plane" class="btn btn-default">
</form>